<tr>
    <td><%= gravatar_for user, size: 50 %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    
    <% if current_user.admin? && !current_user?(user) %>
    <td><%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
  <% end %>  
</tr>
  