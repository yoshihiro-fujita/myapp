<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table border = 2 width = 85%>
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Code</th>
      <th>Number</th>
      <th>Plant</th>
      <th>Volume</th>
      <th>Ratio</th>
      <th>Life</th>
      <th>Sop</th>
      <th>Eop</th>
      <th>Project manger</th>
      <th>Vehicle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.product %></td>
        <td><%= project.name %></td>
        <td><%= project.code %></td>
        <td><%= project.number %></td>
        <td><%= project.plant %></td>
        <td><%= project.volume %></td>
        <td><%= project.ratio %></td>
        <td><%= project.life %></td>
        <td><%= project.sop %></td>
        <td><%= project.eop %></td>
        <td><%= project.project_manger %></td>
        <td><%= project.vehicle_id %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

